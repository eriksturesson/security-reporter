[
  { "name": "AWS Access Key", "pattern": "AKIA[0-9A-Z]{16}", "flags": "i" },
  {
    "name": "AWS Secret Key",
    "pattern": "aws_secret_access_key\\s*=\\s*['\" ]?([A-Za-z0-9/+=]{40})['\" ]?",
    "flags": "i"
  },
  { "name": "Stripe Live Key", "pattern": "sk_live_[0-9a-zA-Z]{24}", "flags": "i" },
  { "name": "Stripe Test Key", "pattern": "sk_test_[0-9a-zA-Z]{24}", "flags": "i" },
  { "name": "Google API Key", "pattern": "AIza[0-9A-Za-z\\-_]{35}", "flags": "i" },
  { "name": "GitHub PAT", "pattern": "ghp_[0-9a-zA-Z]{36}", "flags": "i" },
  { "name": "GitHub PAT (alternate)", "pattern": "github_pat_[0-9a-zA-Z]{22}_[0-9a-zA-Z]{59}", "flags": "i" },
  { "name": "Bearer Token", "pattern": "Bearer\\s+[A-Za-z0-9._~+/\\-]+=*", "flags": "i" },
  { "name": "Generic API Key", "pattern": "api[_-]?key\\s*[:=]\\s*['\"]?([A-Za-z0-9]{32,})['\"]?", "flags": "i" },
  { "name": "JWT Token", "pattern": "eyJ[A-Za-z0-9-_]+\\.eyJ[A-Za-z0-9-_]+\\.[A-Za-z0-9-_.+/=]*", "flags": "i" },
  { "name": "Private Key", "pattern": "-----BEGIN (RSA |EC )?PRIVATE KEY-----", "flags": "i" },
  { "name": "Database URL", "pattern": "(mongodb|postgres|mysql):\\/\\/[^:]+:[^@]+@", "flags": "i" },
  { "name": "Slack Token", "pattern": "xox[baprs]-[0-9a-zA-Z]{10,48}", "flags": "i" },
  { "name": "Password in code", "pattern": "password\\s*[:=]\\s*['\"]([^'\"]{8,})['\"]", "flags": "i" }
]
